<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block debour=false}}
    {{/if}}
  {{/each}}
</ul>








